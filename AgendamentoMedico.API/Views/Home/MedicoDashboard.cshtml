@model IEnumerable<AgendamentoMedico.Domain.Entities.HorarioDisponivel>

@{
    ViewData["Title"] = "Painel do Médico";
}

<h2>Seus Horários Disponíveis</h2>

<table class="table">
    <thead>
        <tr><th>Data e Hora</th></tr>
    </thead>
    <tbody>
        @foreach (var h in Model)
        {
            <tr>
                <td>@h.DataHora.ToString("g")</td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h4>Adicionar horário</h4>
<form asp-action="AddHorario" method="post" class="row g-2 align-items-end">
    <div class="col-auto">
        <label for="dataHora" class="form-label">Data e hora:</label>
        <input type="datetime-local" name="dataHora" id="dataHora" class="form-control" required />
    </div>
    <div class="col-auto">
        <button type="submit" class="btn btn-primary">Adicionar</button>
    </div>
</form>
